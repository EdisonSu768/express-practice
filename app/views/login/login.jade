extends ../layout
block content
  .container(ng-controller="loginController")
    ng-form.form-signin(name='form')
       h2.form-signin-heading Please sign in
       label.sr-only(for='inputEmail') Email address
       input#inputEmail.form-control(type='email',name='email', placeholder='Email address', required='', autofocus='',ng-model='email')
       br
       input#inputPassword.form-control(type='password',name='password', placeholder='Password', required='', ng-model='password')
       .checkbox
          label
             input(type='checkbox', value='remember-me')
             |  Remember me
       button.btn.btn-lg.btn-primary.btn-block(type='button', ng-click="login()") Sign in
